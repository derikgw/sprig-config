# top-most EditorConfig file
root = true

# ==========================
# Default settings
# ==========================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ==========================
# Python files
# ==========================
[*.py]
indent_size = 4

# ==========================
# YAML / TOML files
# ==========================
[*.{yml,yaml,toml}]
indent_size = 2

# ==========================
# Markdown files
# ==========================
[*.md]
trim_trailing_whitespace = false  # Allow trailing spaces for line breaks
indent_size = 2
